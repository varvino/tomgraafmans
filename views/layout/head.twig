<html {{ site.language_attributes }}>
	<head>
		<meta charset="{{ site.charset }}"/>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="title" content="{{site.name}} – {{site.description}}">
		<meta name="description" content="Welkom op mijn WordPress-developer portfolio, hier vindt u mijn meest recente werk.">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link rel="author" href="{{ site.theme.link }}/humans.txt"/>
		<link rel="pingback" href="{{ site.pingback_url }}"/>
		<link rel="profile" href="http://gmpg.org/xfn/11">

		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap">
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		
		<link rel="apple-touch-icon" sizes="180x180" href="{{theme.link}}/assets/img/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="{{theme.link}}/assets/img/favicon//favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="{{theme.link}}/assets/img/favicon//favicon-16x16.png">
		<link rel="manifest" href="{{theme.link}}/assets/img/favicon//site.webmanifest">
		<link rel="mask-icon" href="{{theme.link}}/assets/img/favicon//safari-pinned-tab.svg" color="#5bbad5">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="{{site.url}}">
		<meta property="og:title" content="{{site.name}} – {{site.description}}">
		<meta property="og:description" content="Welkom op mijn WordPress-developer portfolio, hier vindt u mijn meest recente werk.">
		<meta
		property="og:image" content="{{theme.link}}/assets/img/metatag_image.jpg">

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content="{{site.url}}">
		<meta property="twitter:title" content="{{site.name}} – {{site.description}}">
		<meta property="twitter:description" content="Welkom op mijn WordPress-developer portfolio, hier vindt u mijn meest recente werk.">
		<meta property="twitter:image" content="{{theme.link}}/assets/img/metatag_image.jpg">

		{{function('wp_head')}}
	</head>
