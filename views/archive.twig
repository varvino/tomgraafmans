{% extends "index.twig" %}

{% block content %}
	<section class="archive">
		<div class="section__header">
			<h2 class="section__title">{{title}}</h2>
			<p class="section__text">Op deze pagina vindt u mijn recente projecten.</p>
		</div>

		{% if projects is not empty %}
			<div class="archive-items grid grid-column--two">
				{% for project in projects %}
					{% include "partials/archive-item.twig" %}
				{% endfor %}
			</div>
		{% endif %}
	</section>
{% endblock %}
